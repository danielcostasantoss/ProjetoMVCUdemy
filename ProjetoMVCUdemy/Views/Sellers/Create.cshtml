@model ProjetoMVCUdemy.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h3>Seller</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-label">
                <label asp-for="Seller.Nome" class="form-control-plaintext"></label>
                <input asp-for="Seller.Nome" class="form-control" />
                <span asp-validation-for="Seller.Nome" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.Email" class="form-control-plaintext"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.DataNascimento" class="form-control-plaintext"></label>
                <input asp-for="Seller.DataNascimento" class="form-control" />
                <span asp-validation-for="Seller.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.SalarioBase" class="form-control-plaintext"></label>
                <input asp-for="Seller.SalarioBase" class="form-control" />
                <span asp-validation-for="Seller.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.DepartmentId" class="form-control-plaintext"></label>
                <select asp-for="Seller.DepartmentId" 
                    asp-items="@(new SelectList(Model.Departments, "Id", "Nome"))" class="form-control">
                </select>
                <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-label">
            <div class="form-label">
                <input type="submit" value="create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  